<!-- wishlist_item.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Product Image -->
    <ImageView
        android:id="@+id/productImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/curry"
        android:scaleType="centerCrop" />

    <!-- Product Name -->
    <TextView
        android:id="@+id/productNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/productImageView"
        android:layout_marginStart="16dp"
        android:layout_centerVertical="true"
        android:textSize="16sp"
        android:textColor="@android:color/black" />

    <!-- Remove Button -->

    <!-- Text below the Remove Button -->

    <ImageButton
        android:id="@+id/removeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/productNameTextView"
        android:layout_alignStart="@id/productNameTextView"
        android:layout_marginStart="190dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/transparent"
        android:contentDescription="Remove from Wishlist"
        android:src="@drawable/trash" />

    <TextView
        android:id="@+id/removeButtonTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/removeButton"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="54dp"
        android:text="Remove"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

</RelativeLayout>
